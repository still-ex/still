#!/usr/bin/env bash

BLUE='\033[1;34m'
GREEN='\033[1;32m'
RED='\033[1;91m'
YELLOW='\033[1;33m'
BLUE_NB='\033[0;34m'
GREEN_NB='\033[0;32m'
RED_NB='\033[0;91m'
RESET='\033[0m'

# pretty print

pp() {
  printf "$1[$2]: $3${RESET}\n"
}

pp_info() {
  pp $BLUE "$1" "$2"
}

pp_success() {
  pp $GREEN "$1" "$2"
}

pp_error() {
  pp $RED "$1" "$2"
}

pp_warn() {
  pp $YELLOW "$1" "$2"
}

# misc

installed() {
  [ -x "$(command -v "$@")" ]
}

ensure_confirmation() {
  printf "Please confirm you wish to continue [y/n] (default: y): "
  read confirmation
  confirmation=${confirmation:-"y"}

  if [ "$confirmation" != "y" ]; then
    exit 1
  fi
}

elixir_minor_version() {
  elixir --version | \
    awk 'match($0, /Elixir ([[:digit:]]+\.[[:digit:]]+)/) {
      print substr($0, RSTART + 7, RLENGTH - 7)
    }'
}

tool_versions_elixir_minor_version() {
  cat .tool-versions | \
    awk 'match($0, /elixir ([[:digit:]]+\.[[:digit:]]+)/) {
      print substr($0, RSTART + 7, RLENGTH - 7)
    }'
}
