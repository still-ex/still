---
header_title: true
---

header.header
  = if @header_title do
    = link "Still", to: "/"
  - else
    div
  nav.header-nav
    = link "Github", to: "https://github.com/subvisual/still"
    = link "Docs", to: "/docs"

css:
  .header {
    height: 80px;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    padding: 0 2rem;
    justify-content: space-between;
  }

  .header-nav > a {
    margin-left: 2rem;
  }

css:
  .header a {
    text-decoration: none;
  }

