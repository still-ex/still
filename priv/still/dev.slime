= @children

javascript:
  window.socket = new WebSocket('ws://' + location.host + '/ws');

  window.socket.onmessage = function(e) {
    const event = JSON.parse(e.data);

    if (event.type === 'reload') {
      location.reload();
    } else if (event.type === 'error') {
      document.getElementsByTagName("body")[0].classList.add("dev-error-disable-scroll");
      let node = document.createElement("div");
      document.body.appendChild(node);
      node.innerHTML = event.data;
    }
  }

  window.socket.onopen = () => {
    window.socket.send("subscribe");
  };

css:
  .dev-error-disable-scroll {
      overflow: hidden;
  }

  .dev-error, .dev-error * {
    box-sizing: border-box;
  }

  .dev-error {
    background: white;
    color: #333;
    font-family: sans-serif;
    font-size: 18px;
    height: 100%;
    left: 0;
    padding: 2rem;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 9999999;
    overflow-y: scroll;
  }

  .dev-error pre {
    background: #eee;
    overflow-x: scroll;
  }

  .dev-error h1 {
    font-size: 30px;
    font-weight: bold;
  }

  .dev-error h2 {
    font-size: 22px;
    font-weight: bold;
  }

  .dev-error pre {
    width: 100%;
    margin-bottom: 1rem;
    padding: 1rem;
  }
